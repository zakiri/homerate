# Ethereum Network Configuration
ETH_NETWORK_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_MASTER_PRIVATE_KEY=paste-your-64-character-hex-key-here
ETH_MASTER_ADDRESS=0x...
ETH_CHAIN_ID=1
ETH_GAS_PRICE=50

# Osmosis Network Configuration
OSMO_RPC_URL=https://rpc.osmosis.zone:443
OSMO_REST_URL=https://lcd.osmosis.zone/
OSMO_CHAIN_ID=osmosis-1
OSMO_MASTER_PRIVATE_KEY=paste-your-osmo-private-key-here
OSMO_MASTER_ADDRESS=osmo1...
OSMO_GAS_PRICE=0.025

# Master Account Settings
MASTER_ACCOUNT_ENABLED=true
MASTER_ACCOUNT_NAME=HomerateExchange

# ========================================
# OSMO Network Configuration
REACT_APP_OSMO_RPC_URL=https://rpc.osmosis.zone
REACT_APP_OSMO_REST_URL=https://lcd.osmosis.zone
REACT_APP_OSMO_CHAIN_ID=osmosis-1
REACT_APP_OSMO_EXPLORER=https://www.mintscan.io/osmosis

# Network
REACT_APP_NETWORK=osmosis
REACT_APP_API_BASE_URL=http://localhost:5000/api

# Database
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/homerate
DB_NAME=homerate

# JWT
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=7d

# Binance API
REACT_APP_BINANCE_API_KEY=your-binance-api-key
REACT_APP_BINANCE_API_SECRET=your-binance-api-secret
REACT_APP_BINANCE_TESTNET=false

# Wallet Configuration
REACT_APP_WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
REACT_APP_SUPPORTED_WALLETS=keplr,leap,ledger

# Gas Configuration
GAS_PRICE=0.025
GAS_ADJUSTMENT=1.3
DEFAULT_GAS=200000

# Application
REACT_APP_APP_NAME=HomeRate Exchange
REACT_APP_APP_URL=http://localhost:3000
REACT_APP_LOG_LEVEL=debug

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_CORS=true

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Node Environment
NODE_ENV=development
PORT=5000
